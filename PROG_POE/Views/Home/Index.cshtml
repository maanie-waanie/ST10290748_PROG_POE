//HTML structure for the homepage content with a heading and paragraph *@ 

<div class="text-center" style="margin-bottom: 40px;">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Ubuntu|Poppins">
    <h1 style="font-size: 2.5em; font-weight: bold; color: cadetblue; font-family: Ubuntu, sans-serif;">Welcome to the Control Management Claim System</h1>
    <p style="font-size: 1.2em; color: gray; font-family: Poppins, sans-serif;">We are so happy to have you here</p>
</div>

<div class="text-center" style="margin-bottom: 40px;">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Ubuntu|Poppins">
    <h2 style="font-size: 2.5em; font-weight: bold; color: cadetblue; font-family: Ubuntu, sans-serif;">Select Your Role</h2>

    <div class="role-selection">
        <form action="/Account/Login" method="post" style="font-family: Poppins;">
            <button type="submit" name="email" value="lecturer@poe.com" class="btn role-btn">Login as Lecturer</button>
            <button type="submit" name="email" value="coordinator@poe.com" class="btn role-btn">Login as Coordinator</button>
            <button type="submit" name="email" value="hr@poe.com" class="btn role-btn">Login as HR</button>
        </form>
    </div>
</div>

@*
//--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------// *@
<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    input[type=text], input[type=file] {
        width: 100%;
        padding: 15px;
        margin: 10px 0 25px 0;
        display: inline-block;
        border: none;
        background: #f1f1f1;
    }

        input[type=text]:focus {
            background-color: #ddd;
            outline: none;
        }

    hr {
        border: 1px solid #f1f1f1;
        margin-bottom: 25px;
    }

    /* Style for role buttons */
    .role-btn {
        background-color: cadetblue;
        color: white;
        padding: 10px 15px;
        margin: 10px;
        border: none;
        cursor: pointer;
        width: auto; /* Makes the buttons smaller */
        font-size: 0.9em;
        border-radius: 5px; /* Adds some rounding for a modern look */
    }

        .role-btn:hover {
            opacity: 0.8;
        }

    .cancelbtn {
        background-color: lightslategrey;
    }

    .cancelbtn, .submitbtn, .refreshbtn, .uploadbtn, .approvebtn {
        float: left;
        width: 50%;
    }

    .container {
        padding: 20px;
    }

    .clearfix::after {
        content: "";
        clear: both;
        display: table;
    }

</style>

